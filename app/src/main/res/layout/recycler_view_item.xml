    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:textColor="@android:color/white"
        android:layout_centerVertical="true"/>
</RelativeLayout>